# Elearning Chatbot Configuration Example
# Copy file này thành .env và điền thông tin thực tế của bạn

# Gemini Pro API Configuration
# Lấy API key tại: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash

# Database Configuration (optional)
DATABASE_URL=sqlite:///./elearning_chatbot.db
REDIS_URL=redis://localhost:6379

# Vector Database Configuration (optional)
CHROMA_PERSIST_DIRECTORY=./chroma_db
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_VERSION=v1

# Elearning Backend Integration (optional)
ELEARNING_API_BASE_URL=http://localhost:8080/api
ELEARNING_API_KEY=your_elearning_api_key

# Session Configuration
SESSION_TIMEOUT=3600
MAX_CONTEXT_HISTORY=10

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/chatbot.log

# Security
SECRET_KEY=your_secret_key_here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
