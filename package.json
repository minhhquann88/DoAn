{
  "name": "elearning-platform",
  "version": "1.0.0",
  "description": "E-Learning Platform - Modern LMS with Next.js Frontend",
  "scripts": {
    "frontend": "cd frontend && npm run dev",
    "frontend:build": "cd frontend && npm run build",
    "frontend:start": "cd frontend && npm start",
    "chatbot": "python src/main.py",
    "backend": "cd backend && mvnw spring-boot:run",
    "dev:all": "concurrently \"npm run frontend\" \"npm run chatbot\" \"npm run backend\"",
    "install:all": "cd frontend && npm install"
  },
  "keywords": [
    "elearning",
    "lms",
    "nextjs",
    "education",
    "online-learning"
  ],
